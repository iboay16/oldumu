<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <!--ORTAK NAVBAR KULLANIMI-->
<%- include('../partials/nav') %>

   <div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <%- include('../partials/category-menu',categories) %>


            </div>
        </div>
        <div class="col-md-9">
            <h1 class="h3 mb-3">
                <!--EJS İLE SAYFAYA DİNAMİK VERİ EKLEME-->
                <%=title%>

            </h1>
            <% if (blogs.length==0) { %>
             <%- include('../partials/no-products') %>
            <% } %>
            <% blogs.forEach(blog => { %>
             
              <%- include('../partials/blog-card',blog) %>
        
              <!--FİLTRELEME-->
            <% }) %>
            <% if (blogs.filter(b => b.onay).length > 2) { %>
            <!--ORTAL ALAN PAGİNATİON-->
                <%- include('../partials/pagination') %>
            <% } %>
        


        </div>
    </div>
   </div>
</body>
</html>
